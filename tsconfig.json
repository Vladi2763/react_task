{
    "compilerOptions": {
        "target": "es5",
        "lib": [
          "dom",
          "dom.iterable",
          "esnext"
        ],
        "baseUrl": "src",
        "rootDirs": ["src"],
        "paths": {
          "api/*": ["api/*"],
          "const/*": ["const/*"],
          "components/*": ["components/*"],
          "enum/*": ["enum/*"],
          "hooks/*": ["hooks/*"],
          "types/*": ["types/*"],
          "pages/*": ["pages/*"],
          "store/*": ["store/*"],
          "selectors/*": ["selectors/*"],
      },
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": false,
        "sourceMap": true,
        "jsx": "react-jsx"
      },
      "include": [
        "src",
        "global.d.ts"
      ]
}